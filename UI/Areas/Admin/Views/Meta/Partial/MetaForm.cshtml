@model DTO.MetaDTO

<div class="box-body">
    <div class="form-group">
        <label>Meta Content</label>
        @Html.TextBoxFor(m => m.MetaContent, new { @class = "form-control", @placeholder = "Meta Content" })
        @Html.ValidationMessageFor(m => m.MetaContent, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Name</label>
        @Html.DropDownList("Name",
                           new SelectList(
                               new[] { "Keywords", "Description", "Author", "Twittercard" }
                           ),
                           new { @class = "form-control select2" })
    </div>
    <input type="number" name="MetaID" value="@Model.MetaID" hidden />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>